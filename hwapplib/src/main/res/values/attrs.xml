<?xml version="1.0" encoding="utf-8"?>
<resources>


    <declare-styleable name="CircelImageView">
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
    </declare-styleable>

    <declare-styleable name="PxBlurringView">
        <attr name="blurRadius" format="integer" />
        <attr name="downsampleFactor" format="integer" />
        <attr name="overlayColor" format="color" />
    </declare-styleable>

    <declare-styleable name="PercentLayout_Layout">
        <attr name="layout_widthPercent" format="string" />
        <attr name="layout_heightPercent" format="string" />
        <attr name="layout_marginPercent" format="string" />
        <attr name="layout_marginLeftPercent" format="string" />
        <attr name="layout_marginTopPercent" format="string" />
        <attr name="layout_marginRightPercent" format="string" />
        <attr name="layout_marginBottomPercent" format="string" />
        <attr name="layout_marginStartPercent" format="string" />
        <attr name="layout_marginEndPercent" format="string" />
        <attr name="layout_textSizePercent" format="string" />
        <attr name="layout_maxWidthPercent" format="string" />
        <attr name="layout_maxHeightPercent" format="string" />
        <attr name="layout_minWidthPercent" format="string" />
        <attr name="layout_minHeightPercent" format="string" />
        <attr name="layout_paddingPercent" format="string" />
        <attr name="layout_paddingTopPercent" format="string" />
        <attr name="layout_paddingBottomPercent" format="string" />
        <attr name="layout_paddingLeftPercent" format="string" />
        <attr name="layout_paddingRightPercent" format="string" />
    </declare-styleable>

    <!--密码输入框-->
    <declare-styleable name="PswText">
        <!--密码长度-->
        <attr name="pswLength" format="integer" />
        <!--密码框颜色-->
        <attr name="borderColor" format="color" />
        <!--密码颜色-->
        <attr name="pswColor" format="color" />
        <!--输入时密码框颜色-->
        <attr name="inputBorder_color" format="color" />
        <!--输入时密码框阴影颜色-->
        <attr name="borderShadow_color" format="color" />
        <!--明文密码文字大小-->
        <attr name="psw_textSize" format="dimension" />
        <!--密码框圆角程度-->
        <attr name="borderRadius" format="dimension" />
        <!--是否使用图片绘制密码框-->
        <attr name="isDrawBorderImg" format="boolean" />
        <!--按back键时，是否需要绘制明文密码-->
        <attr name="isShowTextPsw" format="boolean" />
        <!--输入密码时密码框是否有阴影-->
        <attr name="isShowBorderShadow" format="boolean" />
        <!--密码框图片-->
        <attr name="borderImg" format="reference" />
        <!--输入时变化的密码框图片-->
        <attr name="inputBorderImg" format="reference" />
        <!--延迟绘制密码圆点的时间,1000 = 1s-->
        <attr name="delayTime" format="integer" />
        <!--是否只绘制明文密码-->
        <attr name="clearTextPsw" format="boolean" />
        <!--是否只绘制圆点-->
        <attr name="darkPsw" format="boolean" />
        <!--是否在输入密码时不更改密码框颜色-->
        <attr name="isChangeBorder" format="boolean" />
    </declare-styleable>

</resources>